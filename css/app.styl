.offer_list
  .item
    position:relative
    width:95%
    margin:5px auto
    img
      width:100%
      box-shadow:0px 0px 10px rgba(0,0,0,0.5)
    .name
      position:absolute
      font-size:14px
      left:10px
      top:10px
      width:200px
      color:white
      text-shadow:0px 0px 3px rgba(0,0,0,0.3)
.loading
  margin:50px 20px
  text-align:center
  border-radius:10px 10px 10px
  box-shadow:0px 0px 5px rgba(0,0,0,0.3)
  padding:10px
  border:1px solid #ccc
.scroll-wrapper
  position:absolute
  height:100%
  width:100%
  text-align:center
  .scroller
    padding-bottom:50px
.offer_show
  .name
    text-align:left
    margin:10px
    padding-bottom:5px
    border-bottom:1px solid #ccc
    text-shadow:3px 3px 3px rgba(0,0,0,0.6)
  .details
    font-size:13px
    padding:10px
    margin:10px
    text-align:left
    background:rgba(255,255,255,0.3)
    box-shadow:0px 0px 3px rgba(0,0,0,0.3)
  .description
    font-size:13px
    padding:10px
    margin:10px
    text-align:left
    background:rgba(255,255,255,0.3)
    box-shadow:0px 0px 3px rgba(0,0,0,0.3)
  .offer_pictures
    margin-left:10px
    float:left
    img.main
      width:290px
      height:179px
      float:left
      border:1px solid #ccc
      box-shadow:0px 0px 5px rgba(0,0,0,0.5)
    .thumb-pictures
      float:left
      margin-top:10px
      clear:left
      img
        padding:3px
        border:1px solid #ccc
        box-shadow:0px 0px 5px rgba(0,0,0,0.5)
        height:38px
        width:57px
        margin:3px
.clear
  clear:both
