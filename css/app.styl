.offer_list
  .item
    position:relative
    width:95%
    margin:5px auto
    .distance
      background:rgba(255,255,255,0.5)
      color:#333
      text-shadow:0px 0px 3px rgba(0,0,0,0.7)
      padding:3px 10px
      position:absolute
      bottom:4px 
      right:3px
      box-shadow:0px 0px 5px rgba(0,0,0,0.4)
    img
      width:100%
      box-shadow:0px 0px 10px rgba(0,0,0,0.5)
    .name
      position:absolute
      text-align:left
      font-size:14px
      left:10px
      top:10px
      width:200px
      color:white
      text-shadow:0px 0px 3px rgba(0,0,0,0.3)
.loading
  margin:50px 20px
  text-align:center
  border-radius:10px 10px 10px
  box-shadow:0px 0px 5px rgba(0,0,0,0.3)
  padding:10px
  border:1px solid #ccc
.scroll-wrapper
  position:absolute
  height:100%
  width:100%
  text-align:center
  .scroller
    padding-bottom:30px
.offer_show
  .title
    padding:5px
    position:absolute
    border-bottom:1px solid #ccc
    top:3px 
    left:5px
    font-size:14px
    text-shadow:0px 0px 2px rgba(0,0,0,0.3)
  .name
    text-align:left
    margin:10px
    padding-bottom:5px
    border-bottom:1px solid #ccc
    text-shadow:3px 3px 3px rgba(0,0,0,0.6)
  .details
    position:relative;
    font-size:13px
    padding:25px 10px 10px 10px
    margin:10px
    text-align:left
    background:rgba(255,255,255,0.3)
    box-shadow:0px 0px 3px rgba(0,0,0,0.3)
  .description
    position:relative;
    font-size:13px
    padding:20px 10px 10px 10px
    margin:10px
    text-align:left
    background:rgba(255,255,255,0.3)
    box-shadow:0px 0px 3px rgba(0,0,0,0.3)
  .offer_pictures
    margin-left:10px
    float:left
    position:relative
    .image_loading
      background:rgba(255,255,255,0.5)
      color:black
      padding:5px 15px
      display:none
      position:absolute
      left:100px
      top:80px
    .price_info
      color:black
      position:absolute
      right:-3px
      height:170px
      top:0px
      .slice
        min-width:50px
        background:rgba(255,255,255,0.6)
        box-shadow:0px 0px 5px rgba(0,0,0,0.5)
        text-shadow:rgba(0,0,0,0.6)
        padding:10px
        color:#333
        float:right
        clear:right
        font-size:18px
        margin-top:5px
        span
          font-size:14px
        &.original_price
          font-size:18px
          text-decoration:line-through
    img.main
      width:290px
      height:179px
      float:left
      border:1px solid #ccc
      box-shadow:0px 0px 5px rgba(0,0,0,0.5)
    .thumb-pictures
      float:left
      margin-top:10px
      clear:left
      img
        padding:3px
        border:1px solid #ccc
        box-shadow:0px 0px 5px rgba(0,0,0,0.5)
        height:38px
        width:57px
        margin:3px
.clear
  clear:both
#offers_map
  height:400px
  width:320px

.order_item
  padding:5px 10px
  box-shadow:0px 0px 5px rgba(0,0,0,0.4)
  border:1px solid #ccc
  margin:10px
  .offer_picture
    float:left
    margin-top:10px
    width:100px
    height:65px
    box-shadow:0px 0px 4px rgba(0,0,0,0.3)
   .offer
     border-bottom:1px solid #ccc
     padding-bottom:3px
   .price
     margin-top:10px
   .info
     margin-left:120px
     margin-bottom:5px
     label
       display:inline-block
       width:70px
.reward_item
  padding:5px 10px
  box-shadow:0px 0px 5px rgba(0,0,0,0.4)
  border:1px solid #ccc
  margin:10px
  .reward_picture
    float:left
    margin-top:10px
    margin-bottom:10px
    width:100px
    height:65px
    box-shadow:0px 0px 4px rgba(0,0,0,0.3)
   .name
     border-bottom:1px solid #ccc
     padding-bottom:3px
   .redeemed
     color:white
     padding:5px 20px
     box-shadow:0px 0px 5px rgba(0,0,0,0.3)
     margin-left:10px
     margin-top:10px
     margin-bottom:10px
     display:inline-block
     &.true
       background-color:green
     &.false
       background-color:#EB6D38
   .checkin_times
     margin-left:120px
     margin-bottom:5px
     label
       display:inline-block
       width:90px
.login_info
  width:100%
  margin-top:20px
  text-align:center
  .buz_login
    border:none
    box-shadow:0px 0px 15px rgba(0,0,0,0.3)
    text-shadow:0px 0px 3px rgba(0,0,0,0.3)
    color:white
    border-radius:5px 5px 5px
    padding:7px 30px
    font-size:20px
    background-color:#314F85
